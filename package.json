{
  "name": "cadena-suministros-app",
  "version": "1.0.0",
  "description": "Aplicación de gestión de cadena de suministros - Backend + Frontend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage --forceExit",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration --forceExit",
    "test:api": "jest tests/api --forceExit",
    "test-apis": "node scripts/test-apis.js",
    "test:rest": "node scripts/test-rest-api.js",
    "seed": "node scripts/seed.js",
    "validate": "node scripts/validate-html.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docker:build": "docker build -t cadena-suministros:latest .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f backend"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.2",
    "eslint": "^8.52.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "routes/**/*.js",
      "models/**/*.js",
      "server.js",
      "!**/*.min.js"
    ]
  }
}
