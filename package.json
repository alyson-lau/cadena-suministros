{
  "name": "cadena-suministros-app",
  "version": "1.0.0",
  "description": "Aplicación de gestión de cadena de suministros - Backend + Frontend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:win": "powershell -ExecutionPolicy Bypass -NoProfile -File scripts/start-dev.ps1 -Action start",
    "test": "jest --coverage --forceExit",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration --forceExit",
    "test:api": "jest tests/api --forceExit",
    "test-apis": "node scripts/test-apis.js",
    "test:rest": "node scripts/test-rest-api.js",
    "seed": "node scripts/seed.js",
    "validate": "node scripts/validate-html.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docker:build": "docker build -t cadena-suministros:latest .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f backend",
    "services:status": "powershell -ExecutionPolicy Bypass -NoProfile -File scripts/start-dev.ps1 -Action status",
    "services:stop": "powershell -ExecutionPolicy Bypass -NoProfile -File scripts/start-dev.ps1 -Action stop",
    "services:logs": "powershell -ExecutionPolicy Bypass -NoProfile -File scripts/start-dev.ps1 -Action logs"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^8.0.0"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "supertest": "^6.3.4"
  }
}
